<Window x:Class="Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="Notes" Height="375" Width="350"
        ResizeMode="NoResize" Topmost="False"
        WindowState="Normal">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.622"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBox x:Name="textField" Margin="10,10,10,50" FontSize="16" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFC3BCBC">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4D5357" Offset="0.06"/>
                    <GradientStop Color="#FF7B95A6" Offset="0.594"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="btnOpen" Height="30" Width="80" Content="OPEN" Margin="10,0,0,10" Background="Gray" FontFamily="Comic Sans MS" FontSize="18" Foreground="#FFF3F0F0" Click="btnOpen_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Button x:Name="btnSave" Height="30" Width="80" Content="SAVE" Margin="0,0,10,10" Background="Gray" FontFamily="Comic Sans MS" FontSize="18" Foreground="#FFF3F0F0" Click="btnSave_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

    </Grid>


</Window>
